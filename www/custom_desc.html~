    <script type="text/javascript">
        $(function(){
            $(".one1").hide();
          // Show chosen div, and hide all others
            $("a").click(function () 
            {
                $('.one1').hide();
                $(this).parent().find('div.one1').slideDown('slow');
                $('i').removeClass('fa-minus-square-o');
                $('i').removeClass('fa-plus-square-o');
                $('i').addClass('fa-plus-square-o');
                $(this).parent().find('i').removeClass('fa-plus-square-o');
                $(this).parent().find('i').addClass('fa-minus-square-o');
            });
        });
		  function save()
		  {
				localStorage['payment_option'] = $("[name='payment']:checked").val();
				localStorage['returns_option'] = $("[name='returns']:checked").val();
				localStorage['shipping_option'] = $("[name='shipping']:checked").val();
				localStorage['other_option'] = $("[name='other']:checked").val();
				location.href = "profile.html";
		  }		
    </script>

	 <script>
		$(function(){
			if(typeof(localStorage["productRow"])!="undefined")
			{
				product = JSON.parse(localStorage["productRow"]);
				$("[value='"+product.payment_option+"']").prop("checked", true);
				$("[value='"+product.returns_option+"']").prop("checked", true);
				$("[value='"+product.shipping_option+"']").prop("checked", true);
				$("[value='"+product.other_option+"']").prop("checked", true);
			}
		});
	 </script>		
  
