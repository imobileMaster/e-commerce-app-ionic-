    <script type="text/javascript">
        $(function(){
            $(".one1").hide();
          // Show chosen div, and hide all others
            $("a").click(function () 
            {
                $('.one1').hide();
                $(this).parent().find('div.one1').slideDown('slow');
                $('i').removeClass('fa-minus-square-o');
                $('i').removeClass('fa-plus-square-o');
                $('i').addClass('fa-plus-square-o');
                $(this).parent().find('i').removeClass('fa-plus-square-o');
                $(this).parent().find('i').addClass('fa-minus-square-o');
            });
        });

		  function save()
		  {
				localStorage['who'] = $('.who:checked').val();
				localStorage['what'] = $('.what:checked').val();
				localStorage['wen'] = $('.when:checked').val();
				localStorage['were'] = $('.where:checked').val();
				localStorage['why'] = $('.why:checked').val();
				localStorage['how'] = $('.how:checked').val();
				location.href = "upload_image.html";
			}	

    </script>
  
