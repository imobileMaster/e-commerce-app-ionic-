    <script type="text/javascript">
        app.initialize();
		  function deviceready()
		  {
				query("SELECT * FROM users WHERE id=?", [localStorage['logged_in_user_id']], 
						function(tx, res){
							row = res.rows.item(0);
							$("#first_name").val(row.first_name);
							$("#middle_name").val(row.middle_name);
							$("#last_name").val(row.last_name);
							$("#email").val(row.email);
							$("#password").val(row.password);
							$("#date_of_birth").val(row.date_of_birth);
						}, 
						function(){
						});
				$("#first_name").change(function(){
					update("users", {first_name:$("#first_name").val()}, "id=?", [localStorage['logged_in_user_id']], 
					function(){
					}, function(e){
						alert("Some exception occured");
					});
				});
				$("#middle_name").change(function(){
					update("users", {middle_name:$("#middle_name").val()}, "id=?", [localStorage['logged_in_user_id']], 
					function(){
					}, function(e){
						alert("Some exception occured");
					});
				});
				$("#last_name").change(function(){
					update("users", {last_name:$("#last_name").val()}, "id=?", [localStorage['logged_in_user_id']], 
					function(){
					}, function(e){
						alert("Some exception occured");
					});
				});
				$("#email").change(function(){
					update("users", {email:$("#email").val()}, "id=?", [localStorage['logged_in_user_id']], 
					function(){
					}, function(e){
						alert("Some exception occured");
					});
				});
				$("#password").change(function(){
					update("users", {password:$("#password").val()}, "id=?", [localStorage['logged_in_user_id']], 
					function(){
					}, function(e){
						alert("Some exception occured");
					});
				});
				$("#date_of_birth").change(function(){
					update("users", {date_of_birth:$("#date_of_birth").val()}, "id=?", [localStorage['logged_in_user_id']], 
					function(){
					}, function(e){
						alert("Some exception occured");
					});
				});
		  }		
    </script>  	
