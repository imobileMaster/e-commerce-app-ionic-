    <!-- Plugin JavaScript -->

	<script>
		function save()
		{
			sessionStorage["imdone"]="1";
			localStorage["image_"+localStorage['profile_selected']] = $(".file-preview-image")[0].src;
			sessionStorage["image_"+localStorage['profile_selected']] = $(".file-preview-image")[0].src;
			location.href="profile.html";
		}
		

		function displayImage(src)
		{
			$(".file-input-new").removeClass("file-input-new");
			$(".file-preview-thumbnails").html('<div class="file-preview-frame"><img src="'+src+'" class="file-preview-image" ></div>');
		}

		function getPicture()		
		{
			navigator.camera.getPicture(function(b64, furl){
					displayImage(b64);
				}, 
				function(){
					
			}, {correctOrientation:true});
		}

	</script>
 
